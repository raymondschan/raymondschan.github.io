<project name="raymondschan.github.io">
	<property name="neighbor.dir" value="/Users/raymondschan/projects/kathrynandraymond.github.io" />

	<target name="-copy">
		<copy todir="templates" >
		    <fileset dir="${neighbor.dir}/templates" includes="**" />
		</copy>
		<copy todir="css" >
		    <fileset dir="${neighbor.dir}/css" includes="**" />
		</copy>
		<copy todir="scripts" >
		    <fileset dir="${neighbor.dir}/scripts" includes="**" />
		</copy>
		<copy todir="./" >
			<fileset dir="${neighbor.dir}" includes="index.html" />
		</copy>
	</target>

	<target name="pull">
		<antcall target="-copy" />
	</target>
</project>
